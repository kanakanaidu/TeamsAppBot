{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
      {
        "type": "TextBlock",
        "spacing": "medium",
        "size": "default",
        "weight": "bolder",
        "text": "Welcome to Siemens Service Desk Bot",
        "wrap": true,
        "maxLines": 0
      },
      {
        "type": "TextBlock",
        "size": "default",
        "isSubtle": true,
        "text": "Hello, nice to meet you!",
        "wrap": true,
        "maxLines": 0
      }
    ],
    "actions": [
      {
        "type": "Action.OpenUrl",
        "title": "Create Chatroom",
        "url": "${Recipients}"
      }
    ]
  }